<div class="container"
  data-controller="waitingroom-subscription"
  data-waitingroom-subscription-journey-id-value="<%= @journey.id %>"
  data-waitingroom-subscription-current-user-id-value="<%= current_user.id %>">

  <div data-waiting-room-subscription-target="waitingUser">
    <h3>Users</h3>
     <% @journey_members.each do |journey_member| %>
        <li>
          <%= journey_member.user.nickname %>
          <% if journey_member.user.avatar.attached? %>
            <%= cl_image_tag journey_member.user.avatar.key, class: "avatar" %>
          <% end %>
        </li>

        <p class="status <%= journey_member.default? || journey_member.dates_voted? || journey_member.locations_voted? || journey_member.locations_accepted? || journey_member.dates_accepted? ||  journey_member.activities_accepted?  ? "warning" : "good" %>" id="status-<%= journey_member.id %>"><%= journey_member.default?|| journey_member.dates_voted? || journey_member.locations_voted? || journey_member.locations_accepted? || journey_member.dates_accepted? ||  journey_member.activities_accepted? ? "Non validé" : "Validé" %></p>
    <% end %>
  </div>
</div>


   <%= link_to "Découvrez votre weekend !", summary_path(@journey) %>
