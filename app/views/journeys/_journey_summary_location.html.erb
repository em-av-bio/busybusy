<div class="summary-location shadow-md bg-white w-full gap-4 rounded-lg overflow-hidden">
  <div  class="summary-location__location bg-no-repeat bg-cover"
        style="background-image: url('<%= @city_voted.location.image_url %>');"
        >
    <div class="w-full h-52 left-0 top-0 flex items-center justify-center">
      <div class="bg-dark-alpha px-4 rounded text-white text-bold text-2xl"><%= @city_voted.location.city %></div>
    </div>
  </div>
  <div class="summary-location__date flex items-center justify-center gap-2 p-2">
    <span class="text-great-blue-300">du</span>
    <span class="text-great-blue-600 font-bold"><%= @date_voted.start_date.strftime("%d/%m/%Y")%></span>
    <span class="text-great-blue-300">au</span>
    <span class="text-great-blue-600 font-bold"><%= @date_voted.end_date.strftime("%d/%m/%Y")%></span>
  </div>
</div>