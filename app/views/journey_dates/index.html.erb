<% @journey_dates.each do |journey_date| %>
    <li>Du <%= journey_date.start_date%>au <%= journey_date.end_date%></li>

<% end %>
<%= link_to "Ce choix me convient", waitings_path(@journey) %>

<%= form_with model: [@journey, @journey_date] do |form| %>
  <%= form.label :start_date %>
