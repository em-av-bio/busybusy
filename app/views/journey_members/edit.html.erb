<%= render "shared/breadcrumbs", step: "budget" %>

<h1 class="text-center">Mon budget pour le weekend</h1>

<div class="flex items-center justify-center py-8 icon64">
  <%= render "shared/budget" %>
</div>

<%= form_with model: [@journey, @journey_member] do |form| %>
  <div class="flex flex-col gap-4">
    <div class="field">
      <%= form.number_field :budget, placeholder: "Budget" %>
    </div>
    <%= form.submit "Valider mon budget", class:"btn primary" %>
  </div>
<% end %>
