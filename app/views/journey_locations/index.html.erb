<div class="pb-24">
  <%= render "shared/breadcrumbs", step: "location" %>

  <h1 class="text-center">Choix d'une destination</h1>

  <% if @journey_locations.size > 0 %>
    <div class="flex flex-col gap-4 py-8">
      <% @journey_locations.each do |journey_location| %>
        <%= render "journey_location_card", journey_location: journey_location %>
      <% end %>
    </div>
  <% end %>

  <h2 class="text-center">Recherche par ville</h2>

  <%= render "journey_locations/search_form"%>
</div>
<div class="fixed bottom-0 left-0 right-0 w-full p-4 bg-white border-t border-great-blue-300">
  <%= link_to "Je valide la liste", journey_journey_dates_path(@journey), class:"btn primary" %>
</div>
