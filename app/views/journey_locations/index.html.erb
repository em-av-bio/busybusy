<%= render "journeys/summary", journey: @journey, total_budget: @journey_total_budget, journey_members: @journey.journey_members %>

<h1>Affichage locations</h1>

<% @journey_locations.each do |journey_location| %>
    <li><%= journey_location.location.city%></li>
    <img src="<%= journey_location.location.image_url %>">
<% end %>

<%= link_to "Je valide la liste", journey_journey_dates_path(@journey) %>



<h1>Ajout d'un lieu</h1>

<%= form_with model: [@journey, @journey_location] do |form| %>
  <%= form.label :location_id %>
  <%= form.select :location_id, @select_locations %>
  <%= form.submit "Ajouter une ville" %>
<% end %>
